<?xml version="1.0" encoding="utf-8"?>
<app:android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        >
        <LinearLayout
            style="@style/linearLayout">

            <LinearLayout
                style="@style/topLinearLayout"
                android:layout_width="0dp"
                android:layout_weight="0.25">

                <TextView
                    android:id="@+id/rating_value"
                    style="@style/textView.number"
                    android:text="@string/number"/>

                <TextView
                    style="@style/textView.text"
                    android:text="@string/range"/>

            </LinearLayout>

            <LinearLayout
                style="@style/line_vertical">
            </LinearLayout>

            <LinearLayout
                style="@style/topLinearLayout"
                android:layout_width="0dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/code_lines_value"
                    style="@style/textView.number"
                    android:text="@string/number"/>

                <TextView
                    style="@style/textView.text"
                    android:text="@string/code_lines_number"/>

            </LinearLayout>

            <LinearLayout
                style="@style/line_vertical">
            </LinearLayout>

            <LinearLayout
                style="@style/topLinearLayout"
                android:layout_width="0dp"
                android:layout_weight="0.25">

                <TextView
                    android:id="@+id/projects_value"
                    style="@style/textView.number"
                    android:text="@string/number"/>

                <TextView
                    style="@style/textView.text"
                    android:text="@string/projects_number"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            style="@style/linearLayout">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle" />

            <ListView
                android:id="@+id/repositories_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large_32">

            </ListView>

            <ImageView
                android:id="@+id/to_user_git"
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/line_horizontal">
        </LinearLayout>

        <LinearLayout
            style="@style/linearLayout">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/my_circle" />

            <LinearLayout
                style="@style/infoLinearLayout">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <EditText
                        android:id="@+id/user_info"
                        style="@style/editText"
                        android:inputType="textMultiLine"
                        android:textSize="@dimen/font_normal_14"
                        android:hint="@string/about_my"
                        android:text="@string/my"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</app:android.support.v4.widget.NestedScrollView>


