<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
    </style>

    <style name="icon.left" parent = "icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent = "icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginRight">@dimen/spacing_large_32</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/content_with_icon_left_margin_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/space_between_content_areas_8</item>
        <item name="android:layout_marginBottom">@dimen/space_between_content_areas_8</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="infoLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/list_item_vertical_spacing_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_size_larger_22</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="textView.number">
        <item name="android:paddingTop">@dimen/status_bar_vertical_spacing_24</item>
        <item name="android:textSize">@dimen/font_size_larger_22</item>
    </style>

    <style name="textView.text">
        <item name="android:paddingBottom">@dimen/status_bar_vertical_spacing_24</item>
        <item name="android:textSize">@dimen/font_size_normal_15</item>
    </style>

    <style name="topLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/line_size_2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/grey_light</item>
    </style>






</resources>
