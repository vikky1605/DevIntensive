<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent = "ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverLay" parent = "ThemeOverlay.AppCompat.Light"></style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
    </style>

    <style name="icon.left" parent = "icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent = "icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginRight">@dimen/spacing_large_32</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size_2</item>
        <item name="android:layout_marginLeft">@dimen/spacing_huge_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="infoLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/spacing_huge_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textView.number">
        <item name="android:paddingTop">@dimen/spacing_medium_24</item>
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="textView.text">
        <item name="android:paddingBottom">@dimen/spacing_medium_24</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="topLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/line_size_2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="editText_send_mail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
    
    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_accent</item>
    </style>

    <style name="editText_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

</resources>
