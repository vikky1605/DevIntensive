<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:paddingTop="@dimen/spacing_medium_24"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/nav_header_bg">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/size_medium_60"
        android:layout_height="@dimen/size_medium_60"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/my_photo"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_normal_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_14"
            android:fontFamily="sans-serif-medium"

            />
        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="myMail@mail.ru"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_14"
            android:fontFamily="sans-serif"/>


    </LinearLayout>

</RelativeLayout>